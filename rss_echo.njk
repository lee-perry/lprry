			  {% if post.data.kcal %}ğŸ§ {{ post.data.kcal }} kcal{% endif %}
			  <br><br>
			{% endif %}
		
		  {{ post.data.description | default(post.data.title) | safe }}
		  {% if post.data.link %}
		  	  <br>
			  {{ post.data.link }}
			{% endif %}
		  {% if post.data.tags %}
		      <br>
			  #{{ post.data.tags | join(" #") }}
		  {% endif %}
		]]></description>

	  </item>
	{% endfor %}

  </channel>
</rss>
